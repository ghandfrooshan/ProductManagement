@model ProductDto
@{
    ViewBag.Title = "Edit Product";
    Layout = null;

    var categoryList = ViewBag.Category;

   
}


<form id="product-update-form">

    @*<blockquote class="blockquote mb-0 mt-2">*@
    <div class="row" style="font-size:14px;">
        <div class="col-md-12">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="ProductId" id="Id" value="@Model.ProductId" />

                  <div class="form-group col-md-6">
                    <label>Category</label>
                        <select class="form-select" name="CategoryId" id="CategoryBrowsers">
                        
                            @foreach (var category in categoryList)
                        {

                            @if (Model.CategoryId == category.Id)
                            {
                                 <option value=@category.Id selected>@category.Name </option>
                            }
                            else
                            {
                                <option value=@category.Id >@category.Name </option>
                            }
                                

                        }
                    </select>
                </div>

    <div class="form-group col-md-6">
                    <label class="control-label"> Product Name </label>
                        <input id="ProductName" name="Name" class="form-control" value=@Model.ProductName required />
                </div>


        </div>
    </div>
        </div>


 </form>